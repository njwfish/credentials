\RequirePackage{tikz}
\usetikzlibrary{shapes.multipart}
\usetikzlibrary{positioning}

\newcommand{\rolefont}{%
  \fontsize{14pt}{24pt}\selectfont%
  \thinfont%
  \color{white}%
}

\newcommand{\header}[3]{%
  \begin{tikzpicture}[remember picture,overlay]
    \node [rectangle, fill=fillheader, anchor=north, minimum width=\paperwidth, minimum height=2.25cm] (box) at (current page.north){};
    \node [anchor=center] (name) at (box) {%
      \fontsize{18pt}{53pt}\color{header}%
      {\thinfont #1}{\bodyfont #2}
    };
    \node [anchor=north] at (name.south) {%
      \fontsize{12pt}{24pt}\color{header}%
      \thinfont #3%
    };
  \end{tikzpicture}
  \vspace{1.5cm}
}

\newcommand{\footer}{%
  \begin{tikzpicture}[remember picture,overlay]
    \node [shape=rectangle split, rectangle split horizontal, rectangle split parts=3, anchor=south,text width=.667in, minimum height=.2cm, rectangle split part fill={blue,red,orange},] (box) at (current page.south){\nodepart{two}\nodepart{three}};;
  \end{tikzpicture}
}


